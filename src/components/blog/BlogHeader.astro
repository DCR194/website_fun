---
interface Props {
  title: string;
  author: string;
  pubDate: Date;
  image?: string;
}

const { title, author, pubDate, image } = Astro.props;
---

<header class="mb-8">
  {image && (
    <img 
      src={image} 
      alt={title}
      class="w-full h-[400px] object-cover rounded-lg mb-8"
    />
  )}
  
  <h1 class="text-4xl font-bold mb-4">{title}</h1>
  <div class="flex gap-4 text-gray-600">
    <span>{author}</span>
    <span>â€¢</span>
    <span>{pubDate.toLocaleDateString()}</span>
  </div>
</header>